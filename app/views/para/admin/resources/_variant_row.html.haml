%tr.variants-matrix-variant-row{ data: { :'variants-matrix-variant-row' => true, :'variant-id' => form.object.id } }
  %td
    = form.hidden_field :id

    %span.checkbox
      = form.input_field :published, data: { :'variants-matrix-variant-published' => true }

  - properties.each do |property_config|
    - property = property_config.property_value_for(form.object)

    %td{ data: { :'variants-matrix-variant-property' => property_config.property_name } }
      %span{ data: { :'property-name' => true } }
        = property_config.property_name_for(property)

      = form.hidden_field property_config.foreign_key, data: { :'property-id' => true }

  %td
    .input-group
      = form.input_field :price, class: 'form-control'
      %span.input-group-addon
        = form.object.currency.symbol
